generator client {
  provider = "prisma-client-js"
  output   = "../../../../../node_modules/@prisma/client/meetup"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:@localhost:5432/MeetupDB"
}


model Meetup {
  id          Int      @id @default(autoincrement())
  topic       String
  description String
  time        String
  date        String
  country     String
  city        String
  street      String
  houseNumber String
  tags        TagOnMeetup[]
  latitude    Float?
  longitude   Float?
}

model Tag {
id    Int    @id @default(autoincrement())
name  String @unique
meetups TagOnMeetup[]
}


model TagOnMeetup {
id      Int    @id @default(autoincrement())
tagId   Int
meetupId Int
tag     Tag    @relation(fields: [tagId], references: [id])
meetup  Meetup @relation(fields: [meetupId], references: [id])
@@unique([tagId, meetupId])
}